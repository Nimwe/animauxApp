{# {{ dump(animal) }} #}
    <div class="p-3 mb-2 bg-danger-subtle text-emphasis-danger">

    <h1> {{ animal.nom }} <br> </h1>
    <h5> {{ animal.nomLatin }} </h5>

    {% for continent in animal.continents %}
     <a href="/continent/{{continent.id}}">{{ continent.libelle }}</a>
    {% endfor %}

